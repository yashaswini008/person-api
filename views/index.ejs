<h1>Person List</h1>
<a href="/person/new">➕ Add New</a>
<table border="1">
  <tr>
    <th>Name</th><th>Age</th><th>Gender</th><th>Mobile</th><th>Actions</th>
  </tr>
  <% people.forEach(person => { %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.age %></td>
      <td><%= person.gender %></td>
      <td><%= person.mobile %></td>
      <td>
        <a href="/person/edit/<%= person._id %>">✏️</a>
        <a href="/person/delete/<%= person._id %>">🗑️</a>
      </td>
    </tr>
  <% }) %>
</table>
